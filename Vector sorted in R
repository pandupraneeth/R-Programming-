# Sort a numeric vector in ascending order

numeric_vector <- c(5, 8, 1, 4, 9, 2, 7, 3, 6)

sorted_numeric_vector <- sort(numeric_vector)

print(sorted_numeric_vector)

# Sort a numeric vector in descending order

sorted_numeric_vector_desc <- sort(numeric_vector, decreasing = TRUE)

print(sorted_numeric_vector_desc)

# Sort a character vector in ascending order

character_vector <- c("banana", "apple", "cherry", "date", "elderberry")

sorted_character_vector <- sort(character_vector)

print(sorted_character_vector)

# Sort a character vector in descending order

sorted_character_vector_desc <- sort(character_vector, decreasing = TRUE)

print(sorted_character_vector_desc)
